<!-- This is for title-->
<div class="form-group">
    <label for="title">Title</label>
    <input required value = "<%= article.title %>" type="text" name="title" id="title" class="form-control"> <!-- form-control gives us the nice form fromat and the required give us the constraint of must fullfill the form-->
</div>

<!-- This is for description-->
<div class="form-group">
    <label for="description">Description</label>
    <textarea name="description" id="description" class="form-control"><%= article.description %></textarea><!-- form-control gives us the nice form fromat and the required give us the constraint of must fullfill the form-->
</div>

<!-- This is for markdown-->
<div class="form-group">
    <label for="markdown">Markdown</label>
    <textarea required name="markdown" id="markdown" class="form-control"><%= article.markdown %></textarea><!-- form-control gives us the nice form fromat and the required give us the constraint of must fullfill the form-->
</div>

<!--cancel btn which will cancel editing and take us to home page-->

<a href="/" class="btn btn-secondary">Cancel</a>

<!-- Submit button-->
<button type="submit" class="btn btn-primary">Save</button>